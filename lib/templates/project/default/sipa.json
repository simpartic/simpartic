{
  "development_server": {
    "host": "0.0.0.0",
    "port": "7000",
    "sass_watch_paths": [
      "assets/style",
      "views"
    ]
  },
  "build": {
    "auto_fix_font_paths_in_css": true,
    "minify": {
      "css": {
        "remove_comments": true,
        "compress": true
      },
      "js": {
        "remove_comments": true,
        "compress": true
      }
    },
    "static_files_to_copy": {
      "files": "files",
      "assets/img": "assets/img"
    }
  },
  "indexer": {
    "ignored_files": [
    ]
  }
}